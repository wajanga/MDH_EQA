<% provide(:title, 'Create new sample') %>
<h1>Create new sample for <%= @facility.name %></h1>

<div class="row">
	<div class="span8 offset2">
<%= form_for(@facility.sent_samples.build(facility_id: @facility.id)) do |f| %>
	<%= render 'sample_fields', f: f %>
  	<%= f.submit "Create", class: "btn btn-large btn-primary" %>
<% end %>
	</div>
</div>